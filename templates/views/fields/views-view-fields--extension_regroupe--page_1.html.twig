{% if fields.type.content == 'Article La Ruche' -%}
	{% set class = 'ruche' %}
{% elseif fields.type.content == 'Le Vivarium - Dossier' -%}
	{% set class = 'vivarium' %}
{% elseif fields.type.content == 'Échappées' -%}
	{% set class = 'echappee' %}
{% elseif fields.type.content == 'Récit de pratique' -%}
	{% set class = 'recits' %}
{% endif %}

<div class="item {{class}}">
	<div data-ix="hover-portfolio-content" class="portfolio-overlay wow fadeInUp">
		{{fields.field_image_de_couverture.content}}

		<a href="{{ fields.view_node.content|striptags}}" data-ix="hide-portfolio-content-on-load" class="w-inline-block portfolio-content animsition-link">
			<div class="portfolio-cn-title">
				<h3 data-ix="scale-portfolio-title-on-load" class="portfolio-title">{{ fields.title.content|raw|striptags }}</h3>
				{% if fields.field_num_pub.content  %}
				<h4 data-ix="scale-portfolio-title-on-load" class="portfolio-title">{{ fields.field_num_pub.content|raw|striptags }}</h4>
				{% endif %}
				<div data-ix="scale-portfolio-title-on-load-2" class="portfolio-sub-title">{{fields.field_mots_cles.content|raw|striptags}}</div>
			</div>
		</a>
	</div>
</div>
