{% if fields.field_type_d_article.content == 'ruche':
        set class = '.ruche';
    %}
<div class="item {{class}}">
    
    <p> {{ }}</p>
    <div data-ix="hover-portfolio-content" class="portfolio-overlay wow fadeInUp">
        {{fields.field_image_de_couverture.content}}
        
        <a href="{{fields.path.content}}" data-ix="hide-portfolio-content-on-load" class="w-inline-block portfolio-content animsition-link">
            <div class="portfolio-cn-title">
                <h4 data-ix="scale-portfolio-title-on-load" class="portfolio-title">{{ fields.title.content }}</h4>
                <div data-ix="scale-portfolio-title-on-load-2" class="portfolio-sub-title">{{fields.field_mots_cles.content}}</div>
            </div>
        </a>
    </div>
</div>