<nav data-ix="hide-menu-type-2-on-load" class="navigation-type-2">
{% import _self as menus %}
{{ menus.menu_links(items, attributes, 0) }}
{% macro menu_links(items, attributes, menu_level) %}
{% import _self as menus %}
   {% if items %}
      {% if menu_level == 0 %}
         <ul class="w-list-unstyled">
      {% else %}
         <ul class="w-list-unstyled dropdown-down-2">
      {% endif %}
      {% for item in items %}
         {%
         set classes = [
         menu_level == 0 ? 'dropdown',
         item.in_active_trail ? 'active',
         item.in_active ? 'active',
         ]
         %}
         {% if menu_level == 0 %}
            {% if item.is_expanded %}
               <li{{ item.attributes.addClass(classes,'w-clearfix li-menu-type-2') }} data-ix="show-dropdown">
               <a href="{{ item.url }}" data-ix="show-line-menu-type-2" class="w-inline-block link-nav-2"><div>{{ item.title }}</div></a><div data-ix="line-menu-type" class="line-bottom-menu"></div>
            {% else %}
               <li{{ item.attributes.addClass(classes,'li-menu-type-2') }}>
               <a href="{{ item.url }}" data-ix="show-line-menu-type-2" class="w-inline-block link-nav-2 animsition-link"><div>{{ item.title }}</div></a><div data-ix="line-menu-type" class="line-bottom-menu"></div>
            {% endif %}
         {% elseif menu_level == 1 %}
               <li{{ item.attributes.addClass(classes) }}>
               <a href="{{ item.url }}" class="w-inline-block dropdown-link animsition-link"><div>{{ item.title }}</div></a>
         {% else %}
            <li{{ item.attributes.addClass.addClass(classes) }}>
            <a href="{{ item.url }}">{{ item.title }}</a>
         {% endif %}
            {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
         {% endif %}
         </li>
      {% endfor %}
      </ul>
   {% endif %}
{% endmacro %}
</nav>