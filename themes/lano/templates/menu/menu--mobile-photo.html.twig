{% macro menu_links(items, attributes, menu_level) %}
{% import _self as menus %}
   {% if items %}
      {% if menu_level == 0 %}
         <ul class="w-list-unstyled dd-big-res">
      {% else %}
         <ul class="w-list-unstyled dd-res">
      {% endif %}
      {% for item in items %}
         {%
         set classes = [
         menu_level == 0 ? 'dropdown',
         item.in_active_trail ? 'active',
         item.in_active ? 'active',
         ]
         %}
         {% if menu_level == 0 %}
            {% if item.is_expanded %}
               <li{{ item.attributes.addClass(classes) }}>
                <div data-ix="open-dd-res" class="w-clearfix nav-res-link">
               <a href="{{ item.url }}" class="res-txt">{{ item.title }}</a>
                <a href="#" class="w-inline-block arrow-ico-res">
                  <i class="fa fa-angle-down"></i>
                </a>
               </div>
            {% else %}
               <li{{ item.attributes.addClass(classes) }}>
               <div class="w-clearfix nav-res-link">
               <a href="{{ item.url }}" class="res-txt animsition-link">{{ item.title }}</a>
               </div>
            {% endif %}
         {% elseif menu_level == 1 %}
            {% if item.is_expanded %}
               <li{{ item.attributes.addClass(classes) }}>
               <div class="w-clearfix nav-res-link">
               <a href="{{ item.url }}" class="res-txt change-size animsition-link"><div>{{ item.title }}</div></a>
               </div>
            {% else %}
               <li{{ item.attributes.addClass(classes) }}>
               <div class="w-clearfix nav-res-link">
               <a href="{{ item.url }}" class="res-txt change-size animsition-link"><div>{{ item.title }}</div></a>
               </div>
              {% endif %}
         {% else %}
            <li{{ item.attributes.addClass.addClass(classes) }}>
            <a href="{{ item.url }}">{{ item.title }}</a>
         {% endif %}
            {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
         {% endif %}
         </li>
      {% endfor %}
      </ul>
   {% endif %}
{% endmacro %}
